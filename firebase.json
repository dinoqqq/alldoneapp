{
    "hosting": {
        "public": "web-build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "headers": [
            {
                "source": "**/*",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "private, no-cache, max-age=0"
                    },
                    {
                        "key": "Content-Security-Policy",
                        "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://apis.google.com https://www.gstatic.com https://www.googletagmanager.com https://accounts.google.com blob: data:; frame-src 'self' https://accounts.google.com https://content.googleapis.com https://content-docs.googleapis.com https://www.googletagmanager.com; connect-src 'self' https://apis.google.com https://*.googleapis.com https://*.google-analytics.com https://region1.google-analytics.com https://region1.analytics.google.com https://www.google.com https://www.gstatic.com https://*.gstatic.com https://*.doubleclick.net https://*.googletagmanager.com https://*.firebaseio.com https://*.cloudfunctions.net wss://*.firebaseio.com https://*.algolia.net https://*.algolianet.com https://api.sendinblue.com https://api.brevo.com https://api.ipregistry.co; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://accounts.google.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' https: data: blob:;"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "/mcpOAuthCallback",
                "function": "mcpOAuthCallback"
            },
            {
                "source": "/.well-known/oauth-authorization-server",
                "function": "oauthAuthorizationServer"
            },
            {
                "source": "/.well-known/oauth-authorization-server/mcpServer",
                "function": "mcpServer"
            },
            {
                "source": "/.well-known/oauth-protected-resource",
                "function": "oauthProtectedResource"
            },
            {
                "source": "/.well-known/oauth-protected-resource/mcpServer",
                "function": "mcpServer"
            },
            {
                "source": "/authorize",
                "function": "mcpServer"
            },
            {
                "source": "/token",
                "function": "mcpServer"
            },
            {
                "source": "/register",
                "function": "mcpServer"
            },
            {
                "source": "/mcpServer",
                "function": "mcpServer"
            },
            {
                "source": "/mcpServer/**",
                "function": "mcpServer"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "hosting": {
            "port": 5000
        },
        "ui": {
            "enabled": true
        },
        "auth": {
            "port": 9099
        },
        "database": {
            "port": 9000
        },
        "pubsub": {
            "port": 8085
        },
        "storage": {
            "port": 9199
        }
    },
    "functions": {
        "source": "functions",
        "runtime": "nodejs20",
        "region": "europe-west1"
    },
    "firestore": {
        "indexes": "firestore.indexes.json"
    }
}
