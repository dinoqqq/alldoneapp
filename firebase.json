{
    "hosting": {
        "public": "web-build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "headers": [
            {
                "source": "**/*",
                "headers": [
                    {
                        "key": "Content-Security-Policy",
                        "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https: blob: data:; frame-src * 'self' https://accounts.google.com https://content.googleapis.com https://content-docs.googleapis.com https://content-gmail.googleapis.com https://www.googletagmanager.com https://*.firebaseapp.com; connect-src 'self' https: wss: blob: data:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://accounts.google.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' https: data: blob:; media-src 'self' https: data: blob:;"
                    }
                ]
            },
            {
                "source": "**/*.@(js|css|html|json|txt|xml|ico|svg|png|jpg|jpeg|gif|webp|woff|woff2|ttf|eot)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "private, no-cache, max-age=0"
                    }
                ]
            },
            {
                "source": "**/*.mp4",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "video/mp4"
                    },
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000, immutable"
                    },
                    {
                        "key": "Accept-Ranges",
                        "value": "bytes"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "/mcpOAuthCallback",
                "function": "mcpOAuthCallback"
            },
            {
                "source": "/.well-known/oauth-authorization-server",
                "function": "oauthAuthorizationServer"
            },
            {
                "source": "/.well-known/oauth-authorization-server/mcpServer",
                "function": "mcpServer"
            },
            {
                "source": "/.well-known/oauth-protected-resource",
                "function": "oauthProtectedResource"
            },
            {
                "source": "/.well-known/oauth-protected-resource/mcpServer",
                "function": "mcpServer"
            },
            {
                "source": "/authorize",
                "function": "mcpServer"
            },
            {
                "source": "/token",
                "function": "mcpServer"
            },
            {
                "source": "/register",
                "function": "mcpServer"
            },
            {
                "source": "/mcpServer",
                "function": "mcpServer"
            },
            {
                "source": "/mcpServer/**",
                "function": "mcpServer"
            },
            {
                "source": "/googleOAuthCallback**",
                "function": "googleOAuthCallback"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "hosting": {
            "port": 5000
        },
        "ui": {
            "enabled": true
        },
        "auth": {
            "port": 9099
        },
        "database": {
            "port": 9000
        },
        "pubsub": {
            "port": 8085
        },
        "storage": {
            "port": 9199
        }
    },
    "functions": {
        "source": "functions",
        "runtime": "nodejs20",
        "region": "europe-west1"
    },
    "firestore": {
        "indexes": "firestore.indexes.json"
    }
}
